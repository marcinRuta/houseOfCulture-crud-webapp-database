package bdbt_proj;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.Properties;

public class LoginDao {
	
	public Properties propA;
	private Properties propP;
	
	public LoginDao() {
		super();
		Properties propA = new Properties();
		Properties propP = new Properties();
		
		try {
			String pathA = new File("src/main/resources/a.properties").getCanonicalPath();
			String pathP = new File("src/main/resources/p.properties").getCanonicalPath();

			propA.load(new FileInputStream(pathA));
			propP.load(new FileInputStream(pathP));
		} catch (IOException e) {
		    e.printStackTrace();
		}
	}
	
	public boolean porwnajA(Login login) {
		if(propA.getProperty(login.getLogin())!=null && propA.getProperty(login.getLogin()).equals(login.getPassword())) {
			return true;
		}else {
			return false;
		}
		
	}
	
	public boolean porwnajP(Login login) {
		if(propP.getProperty(login.getLogin())!=null && propP.getProperty(login.getLogin()).equals(login.getPassword())) {
			return true;
		}else {
			return false;
		}
	}
}
